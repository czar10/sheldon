# rules for ARM2 Adafruit Feather Arduino, used for reading wheel encoders

SUBSYSTEM=="tty", ENV{ID_VENDOR_ID}=="239a", ENV{ID_MODEL_ID}=="800c", KERNELS=="1-1.4.2:1.0", MODE:="0666", GROUP:="dialout", SYMLINK+="arm2_arduino"


# Rule to blacklist Adafruit USB CDC boards from being manipulated by ModemManager.
# Fixes issue with hanging references to /dev/ttyACM* devices on Ubuntu 15.04.
ATTRS{idVendor}=="239a", ENV{ID_MM_DEVICE_IGNORE}="1"


